<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.reservar_turno.ReservarTurnoFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver atrás"
        android:padding="8dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservar turno"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <TextView
        android:id="@+id/tvSelectTimeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Selecciona el horario"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />


<!--    android:background="@drawable/background_card_borde"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardServicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectTimeTitle">

        <TextView
            android:id="@+id/tvLabelServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNombreServicioReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelServicio"
            tools:text="Corte de pelo" />

        <TextView
            android:id="@+id/tvDescripcionServicioReserva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descripción apropiada para un corte de pelo"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNombreServicioReserva" />

        <TextView
            android:id="@+id/tvPrecioServicioReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcionServicioReserva"
            tools:text="$5.99" />

        <TextView
            android:id="@+id/tvDuracionServicioReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tvPrecioServicioReserva"
            app:layout_constraintTop_toTopOf="@id/tvPrecioServicioReserva"
            app:layout_constraintBottom_toBottomOf="@id/tvPrecioServicioReserva"
            tools:text="30 min" />
    </androidx.constraintlayout.widget.ConstraintLayout>


<!--    app:endIconMode="manual"-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Fecha y Hora"
        app:endIconDrawable="@drawable/calendar_month"
        app:endIconMode="custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardServicio">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:text="Seleccionar fecha" />
    </com.google.android.material.textfield.TextInputLayout>


<!--    app:endIconMode="manual"-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutHorario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Horario"
        app:endIconDrawable="@drawable/ic_time_circle"
        app:endIconMode="custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutFecha">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:text="Seleccionar horario" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirmar_reserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmar reserva"
        android:layout_marginTop="20dp"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHorario" />

</androidx.constraintlayout.widget.ConstraintLayout>