<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/background_servicio_item"
    android:layout_marginVertical="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textServicio"
        android:text="Corte de pelo"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textFecha"
        android:text="10/10/2025"
        android:drawableStart="@drawable/calendar_month"
        android:drawablePadding="6dp" />

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textHora"
        android:text="11:00 AM"
        android:drawableStart="@drawable/ic_time_circle"
        android:drawablePadding="6dp" />

    <TextView
        android:id="@+id/textPeluquero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peluquero: Carlos"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="6dp"
        />


    <TextView
        android:id="@+id/textEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_status_pending"
        android:gravity="center"
        android:padding="4dp"
        android:text="Pendiente"
        android:textColor="@color/status_pending_text"
        android:textSize="14sp" />
</LinearLayout>
