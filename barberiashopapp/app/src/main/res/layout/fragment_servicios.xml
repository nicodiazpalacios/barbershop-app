<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.servicios.ServiciosFragment">

    <TextView
        android:id="@+id/tv_titulo_servicios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Servicios"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_ver_ubicacion" />
    <Button
    android:id="@+id/btn_ver_ubicacion"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary0"
    android:text="Mapa"
    app:layout_constraintTop_toTopOf="@id/tv_titulo_servicios"
    app:layout_constraintBottom_toBottomOf="@id/tv_titulo_servicios"
    app:layout_constraintEnd_toEndOf="parent" />

